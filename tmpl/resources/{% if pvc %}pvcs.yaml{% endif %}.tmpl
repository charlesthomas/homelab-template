---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ pvcName }}
  namespace: {{ namespace }}
  labels:
    {% if backups %}recurring-job.longhorn.io/source: enabled{% endif %}
    {% if backups %}recurring-job.longhorn.io/{{ backupName }}: enabled{% endif %}
spec:
  accessModes:
  - {{ pvcAccessMode }}
  resources:
    requests:
      storage: {{ pvcSize }}
  storageClassName: {{ pvcStorageClass }}
  volumeMode: Filesystem
