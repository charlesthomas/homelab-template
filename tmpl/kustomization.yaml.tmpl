---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ name }}

commonAnnotations:
  repo: {{ url }}

{%- if labels|length > 0 %}
commonLabels:
  {{ labels }}
{%- endif %}

{%- if crds %}
crds:
  - crds/
{%- endif %}

resources:
{%- set allResources = ["namespaces.yaml"] %}
{%- if resources | length > 1 %}
{%- set allResources = allResources + resources %}
{%- endif %}
{%- if additionalResources | length > 1 %}
{%- set allResources = allResources + additionalResources.split(',') %}
{%- endif %}
{%- for res in allResources | sort %}
- resources/{{ res }}
{%- endfor %}

{%- if reloader %}
patches:
  - patches/reloader.yaml
{%- endif %}

{%- if helm %}
helmCharts:
- name: {{ helmName }}
  {%- if helmCrds %}
  includeCRDs: true
  {%- endif %}
  releaseName: {{ helmRelease }}
  repo: {{ helmRepo }}
  {%- if helmValues != "" %}
  values: {{ helmValues }}
  {%- endif %}
  {%- if helmVersion != "" %}
  version: {{ helmVersion }}
  {%- endif %}
{%- endif %}
