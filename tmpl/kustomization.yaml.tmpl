---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ name }}

commonLabels:
  {{ labels }}

resources:
{%- for res in ["argocd-application.yaml", "namespaces.yaml"], resources + additionalResources.split(',') | sort %}
- {{ res }}.yaml
{%- endfor %}

{%- if helm %}
helmCharts:
- name: {{ helmName }}
  includeCRDs: {{ helmCrds }}
  releaseName: {{ helmRelease }}
  repo: {{ helmRepo }}
  {%- if helmValues != "" %}values: {{ helmValues }}{%- endif %}
  version: {{ helmVersion }}
{%- endif %}
