---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ name }}

commonLabels:
  {{ labels }}

resources:
{%- if configmap %}
- configmaps.yaml
{%- endif %}
{%- if externalsecrets %}
- external-secrets.yaml
{%- endif %}
{%- if ingress %}
- ingresses.yaml
{%- endif %}
{%- if pvc %}
- pvcs.yaml
{%- endif %}
{%- if reccuringJobs %}
- reccuring-jobs.yaml
{%- endif %}
{%- if service %}
- services.yaml
{%- endif %}
{%- for r in additionalResources.split(',') %}
- {{ r }}.yaml
{%- endfor %}

{%- if helm %}
helmCharts:
- name: {{ helmName }}
  includeCRDs: {{ helmCrds }}
  releaseName: {{ helmRelease }}
  repo: {{ helmRepo }}
  {%- if helmValues != "" %}values: {{ helmValues }}{%- endif %}
  version: {{ helmVersion }}
{%- endif %}
