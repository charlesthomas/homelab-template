---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: {{ name }}

commonLabels:
  {{ labels }}

resources:
{%- set allResources = ["argocd-application.yaml", "namespaces.yaml"] %}
{%- if resources | length > 1 %}
{%- set allResources = allResources + resources %}
{%- endif %}
{%- if additionalResources | length > 1 %}
{%- set allResources = allResources + additionalResources.split(',') %}
{%- endif %}
{%- for res in allResources | sort %}
- {{ res }}
{%- endfor %}

{%- if helm %}
helmCharts:
- name: {{ helmName }}
  includeCRDs: {{ helmCrds }}
  releaseName: {{ helmRelease }}
  repo: {{ helmRepo }}
  {%- if helmValues != "" %}values: {{ helmValues }}{%- endif %}
  version: {{ helmVersion }}
{%- endif %}
