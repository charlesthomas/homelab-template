---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ ingName }}
  annotations:
    external-dns.alpha.kubernetes.io/hostname: {{ ingHost }}
    {%- if ingress.cname != "" %}
    external-dns.alpha.kubernetes.io/target: {{ ingCname }}
    {%- endif %}
    {%- if ingWebSockets %}
    nginx.org/websocket-services: {{ svcName }}
    {% endif %}
    {%- for extra in ingExtraAnnotations.split("\n") %}
    {{ extra }}
    {%- endfor %}
spec:
  ingressClassName: {{ ingClass }}
  rules:
    - host: "{{ ingHost }}"
      http:
        paths:
          - path: "/"
            pathType: {{ ingPathType }}
            backend:
              service:
                name: {{ svcName }}
                port:
                  number: {{ svcPortNum }}
  tls:
    - hosts:
      - {{ ingHost }}

